{
  "expo": {
    "name": "AfroTranslate",
    "slug": "afrotranslate",
    "version": "1.0.0",
    "icon": "assets/icon.png",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.seore.afrotranslate",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice translation features.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition for voice input.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FF6B35"
      },
      "package": "com.seore.afrotranslate",
      "versionCode": 1
    },
    "extra": {
      "eas": {
        "projectId": "1062ba67-97ff-489e-a21d-bfb076d46505"
      }
    },
    "plugins": [
      "expo-speech-recognition"
    ]
  }
}
